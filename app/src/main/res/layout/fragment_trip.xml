<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TripFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/trip_photo"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:contentDescription="@string/trip_photo"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/trip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="15dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="1dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_views"
                android:drawableLeft="@drawable/views_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:drawablePadding="10dp"
                android:layout_margin="15dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/views_ic"
                />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">


            <TextView
                android:id="@+id/trip_agency_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_slab"
                android:text="@string/app_name"
                android:textColor="@color/app_color"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_going"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/filter_btn"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="@string/going"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="0.95dp"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/from"
            android:textColor="@color/app_color"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trip_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/app_name"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            android:layout_marginLeft="50dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.95dp"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/to"
            android:textColor="@color/app_color"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trip_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/app_name"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            android:layout_marginLeft="50dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.95dp"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/price"
            android:textColor="@color/app_color"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_slab_bold"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/roboto_slab"
            android:text="@string/app_name"
            android:textColor="@color/app_color"
            android:textSize="16sp" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="0.95dp"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/duration"
            android:textColor="@color/app_color"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trip_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/app_name"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            android:layout_marginLeft="50dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.95dp"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/date"
            android:textColor="@color/app_color"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trip_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/app_name"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            android:layout_marginLeft="50dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.95dp"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/trip_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/app_name"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/app_color"
            android:textSize="16sp"
            android:layout_marginLeft="50dp" />

    </LinearLayout>
</ScrollView>